<div class="col-md-6">
<h2>注册账号</h2>
<%= form_for(resource, as: resource_name,:html=>{:class=>"form-group"},  url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="field form-group">
    <%= f.label "邮件(E-mail):", class: "col-md-4 control-label" %>
    <%= f.email_field :email, autofocus: true, :class=>"form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label "密码", class: "col-md-4 control-label" %>
    <% if @validatable %>
    <%= f.password_field :password, autocomplete: "off", :class=>"form-control",:placeholder=>"不少于#{@minimum_password_length}个字符" %>
    <%else%>
    <%= f.password_field :password, autocomplete: "off", :class=>"form-control" %>
    <% end %>
  </div>

  <div class="field form-group">
    <%= f.label "确认密码", class: "col-md-4 control-label" %>
    <%= f.password_field :password_confirmation, autocomplete: "off", :class=>"form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "注册", :class=>"btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
