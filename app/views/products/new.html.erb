<div class="col-md-6">
<h3>发布</h3>
<%=nested_form_for @product do |f|%>
    <div class="form-group">
       <%= f.label "名称:", class: "col-md-4 control-label" %>
       <%=f.text_field :name, :class=>"form-control"%>
    </div>
     <div>
      <%= f.fields_for :product_images do |fi| %>
        <% if fi.object.new_record? %>
            <%= fi.file_field :image %>
        <% else %>
            <%= image_tag fi.object.image.url %>
            <%= fi.link_to_remove "Remove" %>
        <% end %>
      <% end %>
      <%= f.link_to_add "+添加图像", :product_images, :class=>"btn btn-mini" %>
    </div>
    <div class="form-group">
       <%= f.label "描述:", class: "col-md-4 control-label" %>
       <%=f.text_area :description, :class=>"form-control ", :rows=>"5"%>
    </div>
    <div>
      <%= f.fields_for :tags do |tag| %>
            <%= tag.text_field :title %>
      <% end %>
      <%= f.link_to_add "+添加标签", :tags, :class=>"btn btn-mini" %>
    </div>

<%=f.submit "提交", :class=>"btn btn-primary"%>
<%end%>
</div>
