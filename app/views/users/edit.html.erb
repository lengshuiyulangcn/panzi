<div class="col-md-6">
<%=form_for current_user, :html=>{:class=>"form-group"}  do |f|%>
    <div class="form-group">
       <%= f.label "邮件(E-mail):", class: "col-md-4 control-label" %>
       <%=f.email_field :email, :class=>"form-control ", :disabled=>"disabled"%>
    </div>
       <%=f.hidden_field :id%>
    <div class="form-group">
       <%= f.label "昵称:", class: "col-md-4 control-label" %>
       <%=f.text_field :name, :class=>"form-control "%>
    </div>
 <div class="form-group">
       <%= f.label :qq, "QQ号码:", class: "col-md-4 control-label" %>
       <%=f.text_field :qqnumber, :class=>"form-control "%>
    </div>
 <div class="form-group">
       <%= f.label "联系电话:", class: "col-md-4 control-label" %>
       <%=f.text_field :telnumber, :class=>"form-control "%>
    </div>

<%=f.submit "提交", :class=>"btn btn-primary"%>
<%end%>
</div>
